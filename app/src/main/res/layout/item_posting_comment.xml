<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_light_background"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/Comment_PhotoNick_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/Comment_left"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="100dp">

            <ImageView
                android:id="@+id/Comment_Photo_imgView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#EBEBEB"
                app:srcCompat="@drawable/ic_launcher_foreground" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/Comment_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Comment_NickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Comment_Timestamp_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Comment_Content_editText"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Comment_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="00/00"
            android:textColor="#828282"
            android:textSize="12sp" />

        <Button
            android:id="@+id/Recomment_Bttn"
            android:layout_width="68dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/cardview_shadow_end_color"
            android:text="답글"
            android:textColor="#858585">


        </Button>

        <!--        <TextView-->
        <!--            android:id="@+id/Comment_Time"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="00:00"-->
        <!--            android:textColor="#828282"-->
        <!--            android:textSize="12sp" />-->


    </LinearLayout>

    <EditText
        android:id="@+id/Comment_Content_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Comment_PhotoNick_layout"
        android:layout_weight="1"
        android:background="#00FFFFFF"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="질문 텍스트 질문 텍스트 질문 텍스트"
        android:textSize="12sp" />


</RelativeLayout>