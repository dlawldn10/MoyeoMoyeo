<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:scrollbars="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/detail_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="동아리 모집"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold">

        </TextView>



    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/my_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="18dp"
            android:paddingRight="18dp">

            <RelativeLayout
                android:id="@+id/preview_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/Detail_left"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    app:cardCornerRadius="100dp">

                    <ImageView
                        android:id="@+id/Detail_Photo_imgView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#EBEBEB"
                        app:srcCompat="@drawable/ic_launcher_foreground" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/Detail_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toLeftOf="@id/Detail_right"
                    android:layout_toRightOf="@id/Detail_left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Detail_Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="펜타킬"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/Detail_Explain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="게임 리그 오브 레전드 동아리"
                        android:textColor="#828282"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Detail_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/btn_star"
                        tools:ignore="VectorDrawableCompat" />

                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/peopleNum_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/preview_layout"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="28dp"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingLeft="18dp"
                android:paddingRight="18dp">

                <ImageView
                    android:id="@+id/icn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_baseline_person_24"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/Detail_PeopleNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="10"
                    android:textColor="#828282"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/detail_image"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_below="@id/peopleNum_layout"
                android:background="#DBDBDB"
                app:srcCompat="@android:drawable/ic_menu_camera" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/detail_image"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="18dp"
                android:text="매주 수요일 6시 정기모임 \n*불참자는 최소 전날 미리 연락하기 \n\n동아리 SNS 링크 인스타그램 : http://www.swu.ac.kr \n페이스북 : http://www.swu.ac.kr"
                android:textColor="#000000" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView3"
                android:layout_alignParentBottom="true"
                android:text="지원하기"
                android:textColor="#000000"
                app:backgroundTint="#DBDBDB" />

        </RelativeLayout>





    </ScrollView>




</RelativeLayout>