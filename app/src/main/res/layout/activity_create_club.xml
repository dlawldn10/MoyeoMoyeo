<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateClub"
    android:background="#ffffff">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/detail_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="멘토링 생성"
            android:textColor="#111111"
            android:textSize="16dp"
            android:fontFamily="@font/notosans_bold">

        </TextView>


    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_bold"
                android:text="분야"
                android:textColor="#111111"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/sort1_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_choice"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:text="기획"
                    android:textColor="#111111"
                    android:textSize="12dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/sort2_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_choice"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:text="디자인"
                    android:textColor="#111111"
                    android:textSize="12dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/sort3_btn"
                    android:layout_width="110dp"
                    android:layout_height="23dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_choice"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:text="마케팅/광고"
                    android:textColor="#111111"
                    android:textSize="12dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/sort4_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_choice"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:text="개발"
                    android:textColor="#111111"
                    android:textSize="12dp" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/notosans_bold"
                android:text="이름"
                android:textColor="#111111"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/Name_EditText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/img_edit_small"
                android:ems="10"
                android:fontFamily="@font/notosans_regular"
                android:hint="18자 이내"
                android:includeFontPadding="false"
                android:textSize="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/notosans_bold"
                android:text="한줄 설명"
                android:textColor="#111111"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/SubNameEditText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/img_edit_small"
                android:ems="10"
                android:fontFamily="@font/notosans_regular"
                android:hint="24자 이내"
                android:includeFontPadding="false"
                android:textSize="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/notosans_bold"
                android:text="분야"
                android:textColor="#111111"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/field1_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_choice"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:text="일반"
                    android:textColor="#111111"
                    android:textSize="12dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/field2_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_choice"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:text="서비스"
                    android:textColor="#111111"
                    android:textSize="12dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/field3_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_choice"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:text="전략"
                    android:textColor="#111111"
                    android:textSize="12dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/field4_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_choice"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:text="프로젝트"
                    android:textColor="#111111"
                    android:textSize="12dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/field5_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_choice"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:text="기타"
                    android:textColor="#111111"
                    android:textSize="12dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/notosans_bold"
                android:text="활동 지역"
                android:textColor="#111111"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/area1_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:layout_weight="1"
                        android:layout_marginRight="7dp"
                        android:text="전국"
                        android:textColor="#111111"
                        android:textSize="12dp"
                        android:background="@drawable/btn_choice"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosans_regular"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/area2_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:layout_weight="1"
                        android:layout_marginRight="7dp"
                        android:text="수도권"
                        android:textColor="#111111"
                        android:textSize="12dp"
                        android:background="@drawable/btn_choice"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosans_regular"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/area3_btn"
                        android:layout_width="125dp"
                        android:layout_height="23dp"
                        android:layout_weight="1"
                        android:layout_marginRight="7dp"
                        android:text="충북/충남/대전"
                        android:textColor="#111111"
                        android:textSize="12dp"
                        android:background="@drawable/btn_choice"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosans_regular"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/area4_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:layout_weight="1"
                        android:layout_marginRight="7dp"
                        android:text="전북"
                        android:textColor="#111111"
                        android:textSize="12dp"
                        android:background="@drawable/btn_choice"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosans_regular"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/area5_btn"
                        android:layout_width="95dp"
                        android:layout_height="23dp"
                        android:layout_weight="1"
                        android:layout_marginRight="7dp"
                        android:text="전남/광주"
                        android:textColor="#111111"
                        android:textSize="12dp"
                        android:background="@drawable/btn_choice"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosans_regular"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/area6_btn"
                        android:layout_width="95dp"
                        android:layout_height="23dp"
                        android:layout_weight="1"
                        android:layout_marginRight="7dp"
                        android:text="경북/대구"
                        android:textColor="#111111"
                        android:textSize="12dp"
                        android:background="@drawable/btn_choice"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosans_regular"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/area7_btn"
                        android:layout_width="125dp"
                        android:layout_height="23dp"
                        android:layout_weight="1"
                        android:layout_marginRight="7dp"
                        android:text="경남/부산/울산"
                        android:textColor="#111111"
                        android:textSize="12dp"
                        android:background="@drawable/btn_choice"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosans_regular"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/area8_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:layout_weight="1"
                        android:layout_marginRight="7dp"
                        android:text="강원"
                        android:textColor="#111111"
                        android:textSize="12dp"
                        android:background="@drawable/btn_choice"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosans_regular"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/area9_btn"
                        android:layout_width="65dp"
                        android:layout_height="23dp"
                        android:layout_marginRight="7dp"
                        android:text="제주"
                        android:textColor="#111111"
                        android:textSize="12dp"
                        android:background="@drawable/btn_choice"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosans_regular"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/area10_btn"
                        android:layout_width="65dp"
                        android:layout_height="23dp"
                        android:layout_marginRight="7dp"
                        android:text="기타"
                        android:textColor="#111111"
                        android:textSize="12dp"
                        android:background="@drawable/btn_choice"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosans_regular"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_bold"
                    android:gravity="center|start"
                    android:text="로고"
                    android:textColor="#111111"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/Logo_text"
                    android:layout_width="95dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:background="@drawable/img_image_route"
                    android:baselineAligned="false"
                    android:enabled="false"
                    android:fontFamily="@font/notosans_regular"
                    android:hint="1:1 비율 권장"
                    android:includeFontPadding="false"
                    android:paddingLeft="10dp"
                    android:textColor="#111111"
                    android:textColorHint="#A6A6A6"
                    android:textSize="11dp"
                    android:singleLine="true"/>

                <ImageButton
                    android:id="@+id/LogoBttn"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="-7dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/btn_file"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_bold"
                    android:gravity="center|start"
                    android:text="이미지"
                    android:textColor="#111111"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/Image_text"
                    android:layout_width="95dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:background="@drawable/img_image_route"
                    android:baselineAligned="false"
                    android:enabled="false"
                    android:fontFamily="@font/notosans_regular"
                    android:includeFontPadding="false"
                    android:paddingLeft="10dp"
                    android:textColor="#111111"
                    android:textSize="11dp"
                    tools:ignore="SpeakableTextPresentCheck"
                    android:singleLine="true"/>

                <ImageButton
                    android:id="@+id/ImageBttn"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="-7dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/btn_file"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/notosans_bold"
                android:gravity="center|start"
                android:text="멘토링 설명"
                android:textColor="#111111"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/detailDescription_EditText"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/img_edit"
                android:fontFamily="@font/notosans_regular"
                android:gravity="top"
                android:hint="멘토링에 대한 상세 내용을 작성해주세요."
                android:includeFontPadding="false"
                android:padding="16dp"
                android:textColor="#111111"
                android:textColorHint="#a6a6a6"
                android:textSize="12dp" />


            <Button
                android:id="@+id/CreateClub_Bttn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/btn_apply"
                android:fontFamily="@font/notosans_bold"
                android:text="만들기"
                android:textColor="#ffffff"
                android:textSize="15dp" />
            <!--android:theme="@style/Ripple"/> -->

        </LinearLayout>
    </ScrollView>
</LinearLayout>