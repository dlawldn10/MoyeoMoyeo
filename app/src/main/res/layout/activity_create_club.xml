<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateClub">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/detail_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="모임 설정"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold">

        </TextView>


    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:padding="20dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="모임 종류"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/Sort_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/ClubRBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="동아리" />

        <RadioButton
            android:id="@+id/StudyRBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="스터디" />

        <RadioButton
            android:id="@+id/SpecRBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="대외활동" />

        <RadioButton
            android:id="@+id/EtcRBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="기타" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/Name_EditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:ems="10"
        android:textSize="14dp"
        android:hint="18자 이내" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="한줄 설명"
        android:textStyle="bold"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/Description_EditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:ems="10"
        android:textSize="14dp"
        android:hint="24자 이내" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="분야"
        android:textStyle="bold"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

    <RadioGroup
        android:id="@+id/Field_RadioGroup1"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/Field1RBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="문화/예술/공연" />

            <RadioButton
                android:id="@+id/Field2RBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="학술/교양" />

            <RadioButton
                android:id="@+id/Field3RBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="어학" />

            <RadioButton
                android:id="@+id/Field4RBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="친목" />

    </RadioGroup>

        <RadioGroup
            android:id="@+id/Field_RadioGroup2"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:layout_weight="1"
            android:orientation="vertical">

                <RadioButton
                    android:id="@+id/Field5RBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="봉사/사회활동" />

                <RadioButton
                    android:id="@+id/Field6RBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="창업/취업" />

                <RadioButton
                    android:id="@+id/Field7RBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="운동" />

                <RadioButton
                    android:id="@+id/Field8RBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="기타" />
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="활동 지역"
        android:textStyle="bold"
        android:layout_marginTop="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/Area_RadioGroup1"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/Area1RBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="전국" />

            <RadioButton
                android:id="@+id/Area3RBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="층북/충남/대전" />

            <RadioButton
                android:id="@+id/Area5RBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="전남/광주" />

            <RadioButton
                android:id="@+id/Area7RBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="경남/부산/울산" />

            <RadioButton
                android:id="@+id/Area9RBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="제주" />

        </RadioGroup>

            <RadioGroup
                android:id="@+id/Area_RadioGroup2"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:orientation="vertical"
                android:layout_weight="1">


                <RadioButton
                    android:id="@+id/Area2RBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="수도권" />

                <RadioButton
                    android:id="@+id/Area4RBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="전북" />

                <RadioButton
                    android:id="@+id/Area6RBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="경북/대구" />

                <RadioButton
                    android:id="@+id/Area8RBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="강원" />

                <RadioButton
                    android:id="@+id/Area10RBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="기타" />

            </RadioGroup>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:text="로고"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Logo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|start" />

        <Button
            android:id="@+id/LogoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="파일 선택" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:text="이미지"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Image_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|start" />

        <Button
            android:id="@+id/ImageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="파일 선택" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:text="모임 설명"
        android:layout_marginTop="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/detailDescription_EditText"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="start"
        android:singleLine="false"
        android:textSize="14sp" />


    <Button
        android:id="@+id/CreateClub_Bttn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="모임 만들기"
        android:textSize="20dp" />

</LinearLayout>
    </ScrollView>
</LinearLayout>