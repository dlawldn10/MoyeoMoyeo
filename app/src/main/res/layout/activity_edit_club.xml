<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".EditClubActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/detail_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/notosans_bold"
            android:text="멘토링 설정"
            android:textColor="#111111"
            android:textSize="16dp">

        </TextView>


    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/notosans_bold"
                android:gravity="center|start"
                android:text="이름"
                android:textColor="#111111"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/NameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/notosans_regular"
                android:gravity="center|start"
                android:text="펜타킬"
                android:textColor="#111111"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/notosans_bold"
                android:gravity="center|start"
                android:text="한줄 설명"
                android:textColor="#111111"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/subNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/notosans_regular"
                android:gravity="center|start"
                android:text="게임 리그 오브 레전드 동아리"
                android:textColor="#111111"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/notosans_bold"
                android:gravity="center|start"
                android:text="분야"
                android:textColor="#111111"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/CategoryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/notosans_regular"
                android:gravity="center|start"
                android:text="기타"
                android:textColor="#111111"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/notosans_bold"
                android:gravity="center|start"
                android:text="활동 지역"
                android:textColor="#111111"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/LocationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/notosans_regular"
                android:gravity="center|start"
                android:text="수도권"
                android:textColor="#111111"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_bold"
                android:gravity="center|start"
                android:text="로고"
                android:textColor="#111111"
                android:textSize="13dp" />

            <EditText
                android:layout_width="95dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:background="@drawable/img_image_route"
                android:baselineAligned="false"
                android:fontFamily="@font/notosans_regular"
                android:hint="1:1 비율 권장"
                android:includeFontPadding="false"
                android:paddingLeft="10dp"
                android:textColor="#111111"
                android:textColorHint="#A6A6A6"
                android:textSize="11dp"
                android:enabled="false"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/LogoBtn"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_marginLeft="-7dp"
                android:layout_marginTop="1dp"
                android:layout_weight="0.6"
                android:background="@drawable/btn_register"
                android:includeFontPadding="false"
                android:minWidth="0dp"
                android:text="파일선택"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:fontFamily="@font/notosans_regular"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_bold"
                android:gravity="center|start"
                android:text="이미지"
                android:textColor="#111111"
                android:textSize="13dp" />

            <EditText
                android:layout_width="95dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:background="@drawable/img_image_route"
                android:baselineAligned="false"
                android:enabled="false"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:paddingLeft="10dp"
                android:textColor="#111111"
                android:textSize="11dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_marginLeft="-7dp"
                android:layout_marginTop="0dp"
                android:layout_weight="0.6"
                android:background="@drawable/btn_register"
                android:includeFontPadding="false"
                android:minWidth="0dp"
                android:text="파일선택"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:fontFamily="@font/notosans_regular"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/notosans_bold"
            android:gravity="center|start"
            android:text="멘토링 설명"
            android:textColor="#111111"
            android:textSize="13dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="325dp"
            android:layout_weight="1"
            android:background="@drawable/img_edit"
            android:fontFamily="@font/notosans_regular"
            android:gravity="top"
            android:hint="멘토링에 대한 상세 내용을 작성해주세요."
            android:includeFontPadding="false"
            android:padding="16dp"
            android:textColor="#111111"
            android:textColorHint="#a6a6a6"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/btn_trashcan"
                android:layout_gravity="center_vertical"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="#00FFFFFF"
                android:fontFamily="@font/notosans_regular"
                android:includeFontPadding="false"
                android:stateListAnimator="@null"
                android:text="모임 삭제"
                android:textColor="#757575"
                android:textSize="10dp" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_apply"
            android:fontFamily="@font/notosans_bold"
            android:text="저장"
            android:textColor="#ffffff"
            android:textSize="15dp" />

    </LinearLayout>


</LinearLayout>