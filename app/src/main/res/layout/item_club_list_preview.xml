<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/Preview_left"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        app:cardCornerRadius="100dp">

        <ImageView
            android:id="@+id/Preview_Photo_imgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#EBEBEB"
            app:srcCompat="@drawable/ic_launcher_foreground" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/Preview_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/Preview_left"
        android:layout_toRightOf="@+id/Preview_left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Preview_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="멘토링 명"
            android:textColor="#111111"
            android:textSize="13dp"
            android:fontFamily="@font/notosans_medium"
            android:layout_marginTop="-12dp"
            android:layout_marginBottom="-10dp"/>

        <TextView
            android:id="@+id/Preview_Explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="멘토링 설명"
            android:textColor="#111111"
            android:fontFamily="@font/notosans_regular"
            android:textSize="11dp"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="-5dp"/>
    </LinearLayout>



</RelativeLayout>