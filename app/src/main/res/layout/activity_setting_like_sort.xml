<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingLikeSortActivity"
    android:orientation="vertical"
    android:background="@drawable/img_like_bg">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="평소, 여러분이"
            android:fontFamily="@font/notosans_regular"
            android:textSize="24dp"
            android:textColor="#0064FF"
            android:includeFontPadding="false"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="발전시키고 싶은 분야는?"
            android:fontFamily="@font/notosans_bold"
            android:textSize="24dp"
            android:textColor="#0064FF"
            android:includeFontPadding="false" />

    </LinearLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img_like_graph"
        android:layout_gravity="center"
        android:layout_marginRight="-15dp" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="305dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="155dp"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <!-- 개발 버튼 -->
            <ImageButton
                android:id="@+id/LikeSort_Develop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/btn_cording"
                android:scaleType="fitCenter"
                android:background="#00FFFFFF"
                android:layout_marginRight="5dp"/>

            <!-- 디자인 버튼 -->
            <ImageButton
                android:id="@+id/LikeSort_Design"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/btn_design"
                android:scaleType="fitCenter"
                android:background="#00FFFFFF"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- 마케팅/광고 버튼 -->
            <ImageButton
                android:id="@+id/LikeSort_Marketing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/btn_marketing"
                android:scaleType="fitCenter"
                android:background="#00FFFFFF"
                android:layout_marginRight="5dp"/>

            <!-- 기획 버튼 -->
            <ImageButton
                android:id="@+id/LikeSort_Plan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/btn_plan"
                android:scaleType="fitCenter"
                android:background="#00FFFFFF"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="해당없음"
        android:fontFamily="@font/notosans_medium"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:includeFontPadding="false"
        android:background="#00FFFFFF"/>

</LinearLayout>