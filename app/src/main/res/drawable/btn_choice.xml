<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <item android:state_selected="false">

        <shape>
            <solid android:color="#ffffff"/>
            <corners
                android:radius="25dp"/>

            <stroke
                android:width="1.5dp"
                android:color="#0064FF"/>

            <padding
                android:left="5dp"
                android:right="5dp"/>
        </shape>

    </item>

    <item android:state_selected="true">

        <shape>
            <corners
                android:radius="25dp"/>

            <stroke
                android:width="1.5dp"
                android:color="#0064FF"/>

            <padding
                android:left="5dp"
                android:right="5dp"/>
            <solid android:color="#0064FF"/>
        </shape>

    </item>

</selector>