<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 체크박스 해제 상태 -->
    <item android:state_checked="false"
        android:drawable="@drawable/filter_btn_shape">
        <shape
            android:shape="rectangle" >
            <solid android:color="#FFFFFF" />
            <stroke android:color="#0064FF" android:width="2dp"/>
            <corners
                android:bottomLeftRadius="100dp"
                android:bottomRightRadius="100dp"
                android:topLeftRadius="100dp"
                android:topRightRadius="100dp" />
        </shape>
    </item>
    <!-- 체크박스 선택 상태 -->
    <item android:state_checked="true"
        android:drawable="@drawable/filter_btn_shape_act">

        <shape
            android:shape="rectangle" >
            <solid android:color="#0064FF" />
            <stroke android:color="#0064FF" android:width="1dp"/>
            <corners
                android:bottomLeftRadius="100dp"
                android:bottomRightRadius="100dp"
                android:topLeftRadius="100dp"
                android:topRightRadius="100dp" />
        </shape>
    </item>
</selector>