<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.moyeomoyeo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoyeoMoyeo"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/network_security_config" />

        <activity android:name=".CreateQRActivity" />
        <activity android:name=".MyPageActivity" />

        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="08bbd9429cd88ac8922553576fae5eaa" />

        <activity android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Redirect URI: "kakao{NATIVE_APP_KEY}://oauth" -->
                <data
                    android:host="oauth"
                    android:scheme="kakao08bbd9429cd88ac8922553576fae5eaa" />
            </intent-filter>
        </activity>
        <activity android:name=".CreateClub" />
        <activity android:name=".EditClub" /> <!-- <activity android:name=".MainActivity" /> -->
        <activity android:name=".ManageMember" />
        <activity android:name=".AttendCheckMng" />
        <activity android:name=".AttendCheck" />
        <activity android:name=".MyClubMng" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SearchActivity" />
        <activity android:name=".ClubDetailActivity" />
        <activity android:name=".MyClubDetailActivity" />
        <activity android:name=".EtcActivity" />
        <activity android:name=".StudyActivity" />
        <activity android:name=".SpecActivity" />
        <activity android:name=".ClubListActivity" />
        <activity android:name=".HomeActivity" />
    </application>

</manifest>